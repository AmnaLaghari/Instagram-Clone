<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <div class="form-group">
    <%= form.text_field :content, class:"form-control", placeholder:"Comment" %>
  </div>
  <div class="form-group">
    <%= form.number_field :user_id, id: current_user.id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  <div class="form-group">
    <%= form.number_field :post_id, id: @post.id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  <div class="btn btn-defaults">
    <button type="submit" class="btn btn-default">Comment</button>
  </div>
<% end %>
