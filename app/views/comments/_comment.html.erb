<div>
  <% @user = User.find(comment.user_id) %>
  <% @post = Post.find(comment.post_id)%>
  <%= @user.username %>
  <%= comment.content %>
  <% if current_user == @user%>
    <%= link_to image_tag('edit.png',class:"icon"), edit_post_comment_path(@post.id, comment.id) %>
  <% end %>
  <%= link_to image_tag('delete.png',class:"icon"), post_comment_path(comment.id), method: :delete, data: { confirm: 'Are you sure?' }%>
</div>
