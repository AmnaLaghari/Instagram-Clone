
<div class="container py-5 px-5 justify-content-md-center">
    <div class="row center-block">
        <div class="col-md-3 col-md-offset-3">
            <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, :width=>200, :crop=>"fill" %>
            <% end %>
        </div>
        <div class="col-md-6 center-block">
            <h3><%= current_user.username%></h3>
            <h4><%= current_user.full_name%></h4>
            <h4><%= current_user.bio%></h4>
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-default"%>
            <%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-default" %>
        </div>
    </div>
</div>
