<div class="container">
  <div class="panel panel-danger">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-7">
          <% if @story.images.attached? %>
            <% @story.images.each do |image|%>
              <%= image_tag image ,class:"post_image_l border border-start"%>
            <%end%>
          <%end%>
        </div>
        <% @user = User.find(@story.user_id)%>
        <div class="col-md-5">
          <div class="fs-4 mt-3">
            <%= image_tag @user.avatar, :width=>50, :crop=>"fill", class:"img-circle img-thumbnail"%>
            <%= @user.username%>
          </div>
          <% if current_user == @user %>
            <%= link_to 'Destroy', user_story_path(@user.id, @story.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default"%>
          <% end %>
        </div>
    </div>
    <%= link_to 'Back', user_stories_path , class:"btn btn-default mt-3" %>
  </div>
</div>
