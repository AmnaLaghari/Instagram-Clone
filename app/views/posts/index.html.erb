
<div class="container py-5 px-5 justify-content-md-center">
    <div class="row justify-content-center">
        <div class="col-4">
            <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, :width=>200, :crop=>"fill" %>
            <% end %>
        </div>
        <div class="col-4">
            <h3><%= current_user.username%></h3>
            <h4><%= current_user.full_name%></h4>
            <h4><%= current_user.bio%></h4>
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-secondary"%>
            <%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-secondary" %>
        </div>
    </div>

    <%= link_to 'Add new post', new_post_path %>

    <% @posts.each do |post| %>
      <%if post.user == current_user%>
        <%= post.caption %>
        <% if post.images.attached?%>
        <% post.images.each do |image|%>
        <%= image_tag image , width:"50"%>
        <%end%>
        <%end%>
        <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
      <%end%>
    <% end %>
</div>
