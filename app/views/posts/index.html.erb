
<div class="container">
    <div>
        <div class="row center-block" style="width:1000px">
            <div class="col-md-3 col-md-offset-2">
                <% if current_user.avatar.attached? %>
                    <%= image_tag current_user.avatar, class:"avatar img-circle img-thumbnail"%>
                <% end %>
            </div>
            <div class="col-md-3 col-md-offset-2">
                <h3><%= current_user.username%></h3>
                <h4><%= current_user.full_name%></h4>
                <h5><%= current_user.bio%></h5>
                <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-default" %>
                <%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-default" %>
                <%= link_to 'Add new post', new_post_path, class: "btn btn-default" if policy(current_user).user_exist? %>
            </div>
        </div>
    </div>
    <br/>
    <div class="panel panel-danger">
        <div class="panel-heading text-center"style="background-color:#f5dff2">Posts</div>
        <div class="panel-body">
            <div class="row center-block">
                <div class="col">
                    <% if current_user.posts.any? %>
                        <% @posts.each do |post| %>
                        <%if post.user == current_user%>
                            <% if post.images.attached?%>
                                <%= link_to image_tag(post.images.first, class:"post_image img-rounded"), post, class:"link" %>
                            <% end %>
                        <% end %>
                        <% end %>
                    <% else %>
                        <h5 class="no_post">No post yet</h5>
                    <% end %>

                </div>
            <div>
        </div>
    </div>
</div>
