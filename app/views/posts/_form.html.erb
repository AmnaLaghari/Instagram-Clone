<div class="container">
  <%= form_with(model: post, local: true) do |form| %>
    <div class="field mb-3">
      <%= form.text_field :caption, class:"form-control", placeholder:"Caption" %>
    </div>

    <div class="field mb-3">
      <%= form.file_field :imagees, class:"form-control", type:"file", id:"formFile", multiple: true%>
    </div>
    <div class="field">
      <%= form.number_field :user_id, id: :post_user_id, class:"form-control", value: current_user.id, type: :hidden %>
    </div>
    <div class="btn btn-secondary">
      <button type="submit" class="btn btn-secondary">Submit</button>
    </div>
  <% end %>
</div>
