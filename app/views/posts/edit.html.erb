 <div class="container">
  <h1>Editing Post</h1>
  <%= form_with(model: @post, local: true) do |form| %>
    <% if @post.errors.any? %>
      <%= render 'posts/errors', locals: {model1s: @post} %>
    <% end %>
    <div class="form-group">
      <%= form.text_field :caption, class:"form-control", placeholder:"Caption" %>
    </div>
    <div class="form-group">
      <%= form.file_field :images, class:"form-control", type:"file", id:"formFile", multiple: true, direct_upload: true, accept: 'image/*'%>
    </div>
    <div class="form-group">
      <%= form.number_field :user_id, id: :post_user_id, class:"form-control", value: current_user.id, type: :hidden %>
    </div>
    <div class="btn btn-defaults">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <% end %>
  <%= link_to 'Show', @post,  class:"btn btn-default"%>
  <%= link_to 'Back', posts_path, class:"btn btn-default" %>
</div>
