<div class="container">
  <div class="card mt-5">
    <div class="card-body mx-5 mt-5">
      <div class="row">
        <div class="col">
          <% if @post.images.attached? %>
            <% @post.images.each do |image|%>
              <%= image_tag image , width:"600", class:"border border-start"%>
            <%end%>
          <%end%>
        </div>
        <div class="col ms-5 border border-start">
          <div class="fs-4 mt-3">
            <%= image_tag current_user.avatar, :width=>50, :crop=>"fill", class:"border border-dark rounded-circle"%>
            <%= current_user.username%>
          </div>
          <p class="mt-3">
            <%= @post.caption%>
          </p>
          <p><%= @post.created_at.strftime("#{@post.created_at.day.ordinalize} %B %Y") %> </p>
          <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-dark"%>
          <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary"%>
        </div>
    </div>
    <%= link_to 'Back', posts_path, class:"btn btn-secondary mt-3" %>
  </div>
</div>

