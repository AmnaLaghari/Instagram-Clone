<div class="container">
  <div class="panel panel-danger">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-8">
          <% if @post.images.attached? %>
            <% @post.images.each do |image|%>
              <%= image_tag image ,class:"post_image_l border border-start"%>
            <%end%>
          <%end%>
        </div>
        <% @user = User.find(@post.user_id)%>
        <div class="col-md-5">
          <div class="fs-4 mt-3">
            <%= image_tag @user.avatar, :width=>50, :crop=>"fill", class:"img-circle img-thumbnail"%>
            <%= @user.username%>
          </div>
          <p class="post_caption">
            <%= @post.caption%>
          </p>
          <p class="post_time text-right"><%= @post.created_at.strftime("#{@post.created_at.day.ordinalize} %B %Y") %> </p>
          <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-default "%>
          <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default"%>
          <br/>
          <div class="panel panel-danger comment">
            <div class="panel-heading" style="background-color:#f5dff2">Comments</div>
            <div class="panel-body">
              <%= render @post.comments %>
              <br/>
              <h4>Add a comment:</h4>
              <%= render 'comments/form' %>
            </div>
          </div>
        </div>
    </div>
    <% if current_user == @user%>
      <%= link_to 'Back', posts_path, class:"btn btn-default mt-3" %>
    <% else %>
      <%= link_to 'Back', user_path(@user.id), class:"btn btn-default mt-3" %>
    <%end%>
  </div>
</div>

